<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".InfoGejala">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/namaApp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="Bantuan &amp; Call Centre\n COVID-19"
                android:textColor="@color/black"
                android:textSize="15sp"></TextView>

            <ImageView
                android:src="@drawable/pendahuluan"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentRight="true">
            </ImageView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="641dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="parent"
            tools:context=".MainActivity">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#272643"
                app:tabTextColor="@android:color/white">

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/Tab1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FAQ" />

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/Tab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kontak Layanan" />

            </com.google.android.material.tabs.TabLayout>


            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp">
        </View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:layout_marginBottom="25dp"
            android:textSize="6sp"
            android:gravity="center"
            android:text="Aplikasi Bantuan Informasi Covid-19\nOleh kelompok 6">

        </TextView>

    </LinearLayout>


</ScrollView>