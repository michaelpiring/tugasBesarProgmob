<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".InformasiProtokol">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/namaApp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:text="Informasi Protokol">

            </TextView>

            <TextView
                android:layout_below="@+id/namaApp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:text="COVID-19">
            </TextView>

            <ImageView
                android:src="@drawable/pendahuluan"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_alignParentRight="true">
            </ImageView>

        </RelativeLayout>

        <View
            android:id="@+id/vgaris1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp">
        </View>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_below="@+id/vgaris1">

                    <VideoView
                        android:id="@+id/vvprotokol"
                        android:layout_width="match_parent"
                        android:layout_height="200dp">
                    </VideoView>

                </FrameLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="Protokol Kesehatan \n Covid-19">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@drawable/protokol1">

                    </ImageView>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:src="@drawable/protokol8">

                    </ImageView>
                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:text="LAKUKAN 3M + 1T!">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="15dp"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:textColor="@color/black"
                            android:text="(Masker, Mencuci Tangan, Menjaga Jarak, Tidak Berkerumunan)">
                        </TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:text="1. Menggunakan Masker">
                            </TextView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:layout_width="150dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/protokol2">
                                </ImageView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:layout_marginTop="5dp"
                                        android:textSize="10sp"
                                        android:text="Seperti yang kita ketahui virus corona menyebar melalui droplets atau tetesan lendir penapasan, yang menyebar melalui udara. Penggunaan masekr diperlukan agar tetesan tersebut tersaring sebelum menyebar di udara sekitar, selain itu masker juga dapat menjadi proteksi dari terhidrupnya tetesan yang membawa virus">
                                    </TextView>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginTop="15dp"
                                android:textSize="14sp"
                                android:text="2. Mencuci Tangan">
                            </TextView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:layout_width="150dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/protokol3">
                                </ImageView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:layout_marginTop="5dp"
                                        android:textSize="10sp"
                                        android:text=" Virus corona yang menyebar melalui droplet (tetesan liur) bisa bertahan beberapa lama di permukaan benda. Karena itu, menucici tangan menggunakan sabun selama minimal 20 detik penting untuk dilakukan. Selain sabun, mencuci tangan juga dapat dilakukan dengan menggunakan hand sanitizer dengan kandungan alkohol minimal 60 persen.">
                                    </TextView>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginTop="15dp"
                                android:textSize="14sp"
                                android:text="3. Menjaga Jarak">
                            </TextView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:layout_width="150dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/protokol6">
                                </ImageView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:layout_marginTop="5dp"
                                        android:textSize="10sp"
                                        android:text="Virus corona menyebar melalui percikan-percikan air dari hidung ataupun mulut ketika bersin atau berbicara. Percikan-percikan ini relatif berat, perjalanannya tidak jauh dan jatuh ke tanah dengan cepat. Oleh karena itu, penting untuk menjaga jarak minimal 1 meter atau yang paling di anjurkan adalah 2 meter dari orang lain">
                                    </TextView>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_marginTop="15dp"
                                android:textSize="14sp"
                                android:text="4. Tidak Berkerumunan">
                            </TextView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_margin="5dp"
                                    android:layout_width="150dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/protokol7">
                                </ImageView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:layout_marginTop="5dp"
                                        android:textSize="10sp"
                                        android:text="Tidak berkerumunan merupakan salah satu protokol kesehatan yang diterapkan guna menurunkan penyebaran virus corona. Seperti yang diketahui virus corona sangat mudah menyebar dan menginfeksi hanya melalui udara saja. Oleh karena itu, sangat dianjurkan untuk menghindari kerumunan orang.">
                                    </TextView>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp">
        </View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:layout_marginBottom="25dp"
            android:textSize="6sp"
            android:gravity="center"
            android:text="Aplikasi Bantuan Informasi Covid-19\nOleh kelompok 6">

        </TextView>


    </LinearLayout>


</ScrollView>